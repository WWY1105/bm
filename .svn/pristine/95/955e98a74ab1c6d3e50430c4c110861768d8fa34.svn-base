<div class="doc">
  <ul class="bg-muted">
    <li>合计（张）</li>
    <li>发放：{{title.count||0}}</li>
    <li>已核销：{{title.usedCount||0}}</li>
  </ul>
  <div>

    <div ng-if="post.couponId">
      <ul id="myTab" class="nav nav-tabs" ng-init="post.type = '601'">
        <li ng-class="{'active':post.type=='601'}"><a ng-click="change('601')">发放</a></li>
        <li ng-class="{'active':post.type=='602'}"><a ng-click="change('602')">使用</a></li>
      </ul>
      <div ng-if="view.result.items">

        <table class="table" ng-if="post.type=='601'">
          <thead>
          <tr>
            <td>序号</td>
            <td>上宾号</td>
            <td>券名称</td>
            <td>数量</td>
            <td>原因</td>
            <td>操作员</td>
            <td>时间</td>
          </tr>
          </thead>
          <tbody class="slide-down">
          <tr ng-repeat="row in view.result.items">
            <td ng-bind="((page-1)*count)+$index+1"></td>
            <td><a ng-click="goto('customer/details/'+ row.userId)">{{row.username}}</a></td>
            <td ng-bind="row.name + (row.alias?'('+row.alias+')':'')"></td>
            <td ng-bind="row.count||0"></td>
            <td class="center" ng-bind="row.reason"></td>
            <td class="center" ng-bind="row.staffName||'自助'"></td>
            <td class="center" ng-bind="row.time"></td>
          </tr>
          </tbody>
        </table>
        <table class="table" ng-if="post.type=='602'">
          <thead>
          <tr>
            <td>序号</td>
            <td>上宾号</td>
            <td>券名称</td>
            <td>数量</td>
            <td>核销途径</td>
            <td>操作员</td>
            <td>时间</td>
          </tr>
          </thead>
          <tbody class="slide-down">
          <tr ng-repeat="row in view.result.items">
            <td ng-bind="((page-1)*count)+$index+1"></td>
            <td ng-bind="row.username"></td>
            <td ng-bind="row.name + (row.alias?'('+row.alias+')':'')"></td>
            <td ng-bind="row.count||0"></td>
            <td class="center" ng-bind="row.reason"></td>
            <td class="center" ng-bind="row.staffName||'自动'"></td>
            <td class="center" ng-bind="row.time"></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div ng-if="!post.couponId">
      <div ng-if="view.result.items">
        <table class="table">
          <thead>
          <tr>
            <td>序号</td>
            <td>券名称</td>
            <td>发放数量</td>
            <td>核销数量</td>
          </tr>
          </thead>
          <tbody class="slide-down">
          <tr ng-repeat="row in view.result.items">
            <td ng-bind="((page-1)*count)+$index+1"></td>
            <td ng-bind="row.name"></td>
            <td ng-bind="row.count||0"></td>
            <td ng-bind="row.usedCount||0"></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
