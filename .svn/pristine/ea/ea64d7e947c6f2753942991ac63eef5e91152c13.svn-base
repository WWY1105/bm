<div class="container contents bgw ">
  <div class="col-sm-8  col-sm-offset-2">
    <form class="form-horizontal " ng-submit="send()">
      <div class="form-group">
        <label class="control-label col-sm-4"></label>

        <div class="col-sm-4">
          <div class="avatar-lg">
            <img ng-src="{{view.user.avatarUrl||'public/img/avatar.png'}}"></div>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-4">姓名</label>

        <div class="col-sm-4 ">
          <div class="form-control-static" ng-bind="view.user.nickname"></div>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-4">卡号</label>

        <div class="col-sm-4">
          <div class="form-control-static" ng-bind="view.user.memberCardNo||'无'"></div>
        </div>
      </div>
      <div ng-repeat="coupon in posts.coupons">
        <div class="form-group">
          <label class="control-label col-sm-4" ng-bind="'赠券'+($index+1)">券名</label>

          <div class="col-sm-4 ">
            <select class="form-control" ng-model="coupon.id"
                    ng-options="item.id as (item.name + (item.alias?'('+item.alias+')':''))  for item in view.coupons">

            </select>
          </div>
          <div class="col-sm-2">
					<span class="sm-click" ng-show="!$index" ng-click="add()"> <i class="glyphicon glyphicon-plus"></i>
					</span>
					<span class="sm-click" ng-show="$index" ng-click="remove($index)"> <i
                            class="glyphicon glyphicon-remove"></i>
							</span>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4">数量</label>

          <div class="col-sm-4 ">
            <input ng-model="coupon.count" type="number" class="form-control" value="1" min=1/>
          </div>

        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 col-sm-offset-4">
          <!-- <a class="btn btn-default btn-block" back-button>返回</a> -->
        </div>
        <div class="col-sm-2 ">
          <button class="btn btn-primary btn-block">确定</button>
        </div>

      </div>

    </form>
  </div>
</div>