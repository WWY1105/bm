<div class="out ruleadd2">
  <div class="col-sm-2 text-right ">
    <span class="title">活动详情</span>
  </div>

  <div class="col-sm-10 content mb0">
    <div ng-repeat="(key,detail) in posts.SPECIALPRICE.SPECIALPRICE.detail">
      <div class="form-group mb22" ng-repeat="details in detail" ng-init="details.id=key">
        <div class="col-sm-2">
          <select ng-model="details.id" class="form-control "
                  ng-options="item.id as item.name for item in view.member" name="member" required></select>
        </div>
        <!--<div class="col-sm-3 mt15" ng-repeat="dv in details.value">-->

        <div class=" form-control-static pull-left">菜名:</div>
        <div class="col-sm-3">
          <select ng-model="details.value[0].id" class="form-control " name="code"
                  ng-options="dish.id as (dish.name + ' 原价：￥'+ dish.price) for dish in view.rules.SPECIALPRICE.dishes" required/>
          <!--<option ng-repeat="" value="dish.code">{{dish.name}}</option>-->
          </select>
          <!--<input ng-model="details.value" type="text" class="form-control" min="1" name="amount" placeholder="请输入商品名称" required/>-->
        </div>
        <!--</div>-->

        <!--<div class=" form-control-static pull-left">原价:</div>-->
        <!--<div class="col-sm-2 ">-->
        <!--<input ng-model="details.amount" placehoder="请输入商品原价"  type="number" class="form-control" min="0" required/>-->
        <!--</div>-->
        <div class="pull-left form-control-static">优惠价:</div>
        <div class="col-sm-2 ">
          <input ng-model="details.currentAmount" placeholder="请输入商品现价" type="number" class="form-control" min="0"
                 required/>
        </div>
        <div class="pull-left form-control-static">收银价格:</div>
        <div class="col-sm-2 ">
          <input ng-model="details.limit" placeholder="在收银系统中的价格" type="number" class="form-control" min="0"/>
        </div>
        <a class="add click" ng-if="$parent.$first&&$first" ng-click="ruleFn.addCouponFn('SPECIALPRICE')"> <i
                class="glyphicon glyphicon-plus"></i>
        </a>

        <a class="remove click" ng-if="!$first||!$parent.$first" ng-click="ruleFn.removeFn('SPECIALPRICE',key,$index)">
          <i class="glyphicon glyphicon-remove"></i>
        </a>
      </div>
    </div>
    <div class="col-sm-3 btn btn-primary" ng-click="goto('mall/buy/add')">新增菜品</div>

  </div>


  <div class="out ruleadd2">
    <div class="col-sm-2 text-right ">
      <span class="title">数量</span>
    </div>
    <div class="col-sm-10 content2 mb0">
      <div class="form-group mb22">
        <div class=" form-control-static pull-left">前</div>
        <div class="col-sm-3 ">
          <input type="number" ng-model="posts.SPECIAL.SPECIALPRICE.countLimit" class="form-control" min="0"/>
        </div>
        <div class=" form-control-static pull-left">
          人有效
          <span style="color:#999;padding-left:20px">(0表示不限制)</span>
        </div>

      </div>
    </div>
  </div>
</div>
