<div class="out ruleadd2" >
	<div class="col-sm-2 text-right ">
		<span class="title">活动详情</span>
	</div>

	<div class="col-sm-10 content mb0">
		<div ng-repeat="(key,detail) in posts.LIMITREDUCE.LIMITREDUCE.detail" >
			<div class="form-inline mb22"   ng-repeat="details in detail" ng-init="details.id=key">
				<select ng-model="details.id"   class="form-control "
					ng-options="item.id as item.name for item in view.member" name="member" required></select>
				<span class="form-control-static ">单次消费每满</span>
				<input ng-model="details.amount" type="number" class="form-control" min="0" name="amount" placeholder="请输消费额度限制" required/>
				<span class="form-control-static">元，减</span>
              <input ng-model="details.value" type="number" class="form-control" min="0" name="amount" placeholder="" required/>
              <span class="form-control-static">元，最多减</span>
              <input ng-model="details.limit" type="number" class="form-control" min="0" name="amount" placeholder="" required/>
              <span class="form-control-static">元</span>

              <div class="form-group">
					<a class="add click" ng-if="$parent.$first&&$first" ng-click="view.rules.LIMITREDUCE.addFunc(name)"> <i class="glyphicon glyphicon-plus"></i>
					</a>
					<a class="remove click" ng-if="!$first||!$parent.$first" ng-click="ruleFn.removeFn(name,key,$index)"> <i class="glyphicon glyphicon-remove"></i>
					</a>
				</div>
			</div>
		</div>
	</div>


<div class="out ruleadd2">
	<div class="col-sm-2 text-right ">
		<span class="title">数量</span>
	</div>
	<div class="col-sm-10 content2 mb0">
		<div class="form-group mb22" >
			<div class=" form-control-static pull-left">前</div>
			<div class="col-sm-3 ">
				<input type="number" ng-model="posts.LIMITREDUCE.LIMITREDUCE.countLimit" class="form-control" min="0"placeholder="请输入人数限制"/>
			</div>
			<div class=" form-control-static pull-left">
				人有效
				<span style="color:#999;padding-left:20px">(0表示不限制)</span>
			</div>

		</div>
	</div>
</div>
</div>
