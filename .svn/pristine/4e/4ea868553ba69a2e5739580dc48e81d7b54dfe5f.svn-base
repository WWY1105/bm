<div class="container contents bgw">

  <form class="row" ng-submit="postSend()" name="add_form">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="text-center">
        <label>员工： {{view.userTables.nickname}}</label>
      </div>
      <label class="checkbox-inline">
        <input class="ng-pristine ng-untouched ng-valid" ng-model="tablesAll" ng-click="checkAllTables()"
               type="checkbox">全选
      </label>
      <div class="row ">
        <Div class="user-list">

          <div class="col-sm-12 tablelist">
            <!--<div class="tablesout" ng-repeat="tables in view.tables|orderBy:['seatNum','no']"  ng-mouseover="tables.show=1" ng-mouseleave="tables.show=0">-->
            <div class="tablesout" ng-repeat="tables in view.tables">
              <div class="tables out pull-left">
                <Div class="remove text"></Div>
                <input type="checkbox" class="ng-pristine ng-untouched ng-valid" ng-model="posts.tables[$index]"
                       ng-true-value="{{tables.id}}" ng-false-value="">

                <Div class="seat">{{tables.no}}<span ng-show="tables.type == '1001'">号桌台</span><span ng-show="tables.type == '1002'">号包厢</span></Div>
              </div>
            </div>
          </div>
        </Div>
      </div>
    </div>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="row">
        <div class="col-sm-4">
          <a class="btn btn-default btn-block" ng-click="goto('staff')">返回</a>
        </div>
        <div class="col-sm-4">
          <a class="btn btn-primary btn-block" ng-click="postSend()">确定</a>
        </div>

      </div>
    </div>


  </form>
</div>
