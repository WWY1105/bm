<div class="row">
  <div class="col-xs-3 v-shadow">
    <div class="mt15">
      <form class="col-sm-12 mt15" name="orderSend" ng-submit="send()">
        <input type="text" class="form-control" id="inputSuccess2" ng-model="posts.order"
               placeholder="搜索店名" required/>
        <button class="input-search"><span class="glyphicon glyphicon-search text-primary"></span></button>
      </form>
      </div>
    <div class="mt15">
      <label class="left-tag" style="margin: 20px 0">所有门店</label>
      <div class="list-group" ng-init="active=''" ng-click="select()">
        <a class="list-group-item" ng-class="{'active':!active}" ng-click="active = ''">全部</a>
        <a class="list-group-item" ng-class="{'active':active == 1001}" ng-click="active = 1001">等待审核</a>
        <a class="list-group-item" ng-class="{'active':active == 1002}" ng-click="active = 1002">认证审核中</a>
        <a class="list-group-item" ng-class="{'active':active == 1003}" ng-click="active = 1003">已通过审核</a>
        <a class="list-group-item" ng-class="{'active':active == 1004}" ng-click="active = 1004">关闭审核中</a>
        <a class="list-group-item" ng-class="{'active':active == 1005}" ng-click="active = 1005">停用</a>
      </div>
    </div>
  </div>
  <div class="col-xs-9 v-shadow" style="background: #ffffff;padding-left: 0">
    <div class="bg-primary"> 添加门店</div>
    <div class="col-md-12 shopshow">
      <ul >
        <li ng-repeat="shop in shops.items" class="rotate-in">
          <DIV class="menuicon"   ng-class="{'shopsIcon':shop.state==1003,'shopsIcon2':(shop.state ==1002 || shop.state==1001),'shopsIcon3':shop.state == 1005}" ng-click="goto('shops/show/'+shop.id)"  data-toggle="tooltip" data-placement="bottom" title="{{shop.name}}">
            <Div ng-if="shop.state==1003" class="pull-left menuicon smIcon"></Div>
            <Div ng-if="shop.state==1003"  class="pull-left smName suolue" ng-bind="shop.shopKeeper||'暂无店长'"></Div>
          </DIV>
          <div class="shopTile text-center" ng-bind="shop.name" ></div>

        </li>
        <li class="addShop" ng-click="goto('shops/add')">
          <div class="addShopin">
            <div class="iconout"> <i class="glyphicon glyphicon-plus"></i>
            </div>
            <div class="text">添加门店</div>
          </div>
        </li>
      </ul>
    </div>

    <div class="col-sm-12" ng-if="shops.total">
      <pagination items-per-page="shops.count" boundary-links="true" total-items="shops.total" ng-model="shops.page"
                  class="pagination-sm" previous-text="&lsaquo;" next-text="&rsaquo;"
                  first-text="&laquo;" last-text="&raquo;"></pagination>
    </div>
  </div>
</div>