<div class="col-sm-8 content">
  <div class="form-group ml20 mb22">
    <div class="col-sm-2" ng-repeat="item in topDateRangeCategory">
        <a class="btn btn-default" ng-class="{'btn-primary':data.dateType===item.type}"  ng-click="clickBtn(item.type)" ng-bind="item.name"></a>
    </div>
  </div>

  <div class="animate-switch-container" ng-switch on="data.dateType">
    <div class="animate-switch" ng-switch-when="PERMANENT">
      <div class="ml25">
        <div class="col-sm-10">
          <div class="form-group">
            <label class="control-label">自活动上线之日起即时生效且永久有效
            </label>
          </div>
          <div  class="col-sm-12 form-control-stack text-left">
            <label class="checkbox-inline mb15">
              <input type="checkbox" ng-model="dateRange.selectCategory" ng-true-value="EXCLUDE" ng-false-value="NONE">排除指定日期</input>
            </label>
            <my-special-date special-date="dateRange" ng-if="dateRange.selectCategory==='EXCLUDE'"></my-special-date>
          </div>
        </div>
      </div>
    </div>

    <div class="animate-switch" ng-switch-when="CONTINUOUS">
      <div class="row ml25">
        <div class="col-sm-6 " >
          <div class="row">
            <label  class="col-sm-3 control-label text-left" >开始</label>
            <div class="col-sm-9">
              <p class="input-group">
                <input  class="form-control" datepicker-popup ng-model="dateRange.startDate" is-open="opened.startTime" min-date="dateOptions.dftDate" max-date="dateOptions.maxDate" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" show-weeks="flase" ng-change="changeEnd()" name="startTime"/>
                <span class="input-group-btn">
                  <button type="button" class="btn btn-default" ng-click="open($event,'startTime')"><i class="glyphicon glyphicon-calendar"></i></button>
                </span>
              </p>
            </div>

          </div>
        </div>
        <div class="col-sm-6 ">
          <div class="row">
            <label  class="col-sm-3 control-label text-left">结束</label>
            <div class="col-sm-9">
              <p class="input-group">
                <input  class="form-control" datepicker-popup ng-model="dateRange.endDate" is-open="opened.endTime" min-date="dateOptions.minDate" max-date="dateOptions.maxDate" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" show-weeks="flase" ng-change="changeEnd()" name="endTime"/>
                <span class="input-group-btn">
                  <button type="button" class="btn btn-default" ng-click="open($event,'endTime')"><i class="glyphicon glyphicon-calendar"></i></button>
                </span>
              </p>
            </div>
          </div>
        </div>
        <div  class="col-sm-12 form-control-stack text-left">
          <label class="checkbox-inline mb15">
            <input type="checkbox" ng-model="dateRange.selectCategory" ng-true-value="EXCLUDE" ng-false-value="NONE">排除指定日期</input>
          </label>
          <my-special-date special-date="dateRange" ng-if="dateRange.selectCategory==='EXCLUDE'"></my-special-date>
        </div>
      </div>
    </div>

    <div class="animate-switch" ng-switch-when="BIRTHDAY">
      <div class="ml25">
        <div class="col-sm-10">
            <div  class="col-sm-12 form-control-stack text-left">
              <label class="checkbox-inline mt15">
                <input type="checkbox" ng-model="data.subType" ng-true-value="AROUND_FIX_DATE">请设置在生日当天的前后几天可参加本活动</input>
              </label>
              <div ng-if="data.subType==='AROUND_FIX_DATE'">
                <div class="form-group mt15">
                  <span class="col-sm-offset-1 form-control-static">
                  如生日前后都写0天，则表示生日当天</span>
                </div>
                <div>
                  <div class="col-sm-offset-1 form-inline mt15">
                    <div class="form-group">
                      <span class="form-control-static">生日前</span>
                      <label for="" class="sr-only"></label>
                      <input class="form-control" type="number" min="0" ng-model="dateRange.beforeDays" placeholder="可填写0" name="beforeDays" required></input>
                      <span class="form-control-static">天</span>
                    </div>
                  </div>
                  <div class="col-sm-offset-1 form-inline mt15">
                    <div class="form-group">
                      <span class="form-control-static">生日后</span>
                      <label for="" class="sr-only"></label>
                      <input class="form-control" type="number" min="0" ng-model="dateRange.afterDays" placeholder="可填写0" name="afterDays" required></input>
                      <span class="form-control-static">天</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          <div  class="col-sm-12 form-control-stack text-left">
            <label class="checkbox-inline">
              <input type="checkbox" ng-model="data.subType" ng-true-value="MONTH_EFFECTIVE">生日当月皆可参加本活动</input>
            </label>
          </div>

          <div class="col-sm-12 form-control-stack text-left" ng-if="data.subType==='MONTH_EFFECTIVE'">
            <label class="checkbox-inline mt15 ml15">
              <input type="checkbox" ng-model="dateRange.selectCategory" ng-true-value="EXCLUDE" ng-false-value="NONE">排除指定日期</input>
            </label>
            <my-special-date special-date="dateRange" ng-if="dateRange.selectCategory==='EXCLUDE'"></my-special-date>
          </div>

        </div>
      </div>
    </div>

    <div class="animate-switch" ng-switch-when="SELECTED_DATES">
      <div class="ml25">
        <div class="col-sm-10">
          <label class="col-sm-offset-1 control-label mb15" >请选择指定日期</label>
          <div  class="col-sm-12 form-control-stack text-left">
            <my-special-date special-date="dateRange" ng-init="dateRange.selectCategory='INCLUDE'"></my-special-date>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
