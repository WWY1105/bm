$(function () {
    $("body").keydown(function (e) {
        13 == e.keyCode && $(".btn").click()
    }), $("input").focus(function () {
        $(".error").html("")
    }), $(".btn").click(function () {
        if (!/^[0-9a-zA-Z:：]*$/g.test($("#name").val())) return void $(".error").html("账号输入错误");
        if (!$("#name").val()) return void $(".error").html("账号不能为空");
        if (!$("#password").val()) return void $(".error").html("密码不能为空");
        var e = {
                name: $("#name").val(),
                password: hex_md5($("#password").val())
            },
            r = ajaxSendFn(e, constUrlDict.login, "POST", 2);
        if (403e3 == r.code) $.cookie("token", null, {
            path: "/"
        });
        else {
            if (200 != r.code) return void $(".error").html(r.message);
            $.cookie("token", r.result.token, {
                path: "/"
            })
        }
        "M" === r.result.type ? location.href = indexUrl + "/admin.html" : "K" === r.result.type ? location.href = indexUrl + "/keeper.html" : "S" === r.result.type ? location.href = indexUrl + "/staff.html" : alert("服务器繁忙,请稍后再试")
    })
});