<div class="container contents bgw">
	<div class="col-sm-8 col-sm-offset-2 memberadd">
		<div class="col-sm-2 menshow text-center" style="height:80px" ng-repeat="(key,members) in view.member"  ng-Mouseleave="members.title=members.grade" ng-Mouseover="members.title='查看'" ng-click="memberUpgradeSHow(key)">
			<a ng-bind="members.title||members.grade"></a>
			<span style="height:40px;display:block" ng-bind="members.name"></span>
			<div ng-show="($index+1)%6&&!$last" style="margin-top:-70px;margin-left:40px;">
				<img src="public/img/arrow.png"></div>
		</div>
	</div>
	<div class="col-sm-8 tables col-sm-offset-2 mt20 text-left">
		<div class="list-group" ng-if="planShow">
			<div class="list-group-item default">
				<h4  class="left-title" ng-bind="(view.plan.grade)+'级会员升级规则'"></h4>
				<h4 class="right-title" style="padding:0 20px;"> <i class="glyphicon glyphicon-remove" ng-click="closeFn()"></i>
				</h4>
			</div>
			<div class="list-group-item">
					<div class="out ruleadd" >
						<div class="col-sm-3 text-right ">
							<span class="title">级别名称</span>
						</div>
						<div class="col-sm-8 content mb0">
							<div class="form-control-static col-sm-offset-1 text-left" ng-bind="view.plan.name"></div>
						</div>
					</div>
					<div class="out ruleadd" >
						<div class="col-sm-3 text-right ">
							<span class="title">兑换规则</span>
						</div>
						<div class="col-sm-8 content2 mb0" >
							<div class="form-group mb22 col-sm-12"  ng-repeat="plan in view.plan.memberGrade" ng-if="view.plan.memberGrade[0]">
								<div class="form-control-static pull-left">
									<span class="text-red">*</span>
									<span ng-bind="costType[plan.type].start"></span>
									<span ng-bind="plan.value"></span>
									<span ng-bind="costType[plan.type].end"></span>
								</div>
								<div class="form-control-static pull-left">
									从
									<span class="text-red" ng-bind="plan.fromId=='FOLLOWER'?'非会员':(view.plan.grade-1)+'级会员'"></span>
									升级到
									<span class="text-red" ng-bind="(view.plan.grade)+'级会员'"></span>
								</div>

							</div>
							<div class="form-group mb22 col-sm-12"  ng-if="!view.plan.memberGrade[0]">
								<div class="form-control-static text-left">
								暂无规则
								</div>
							</div>	
						</div>
					</div>
							
				</div>
				<div class="list-group-item">
					<div class="col-sm-10 col-sm-offset-1">
						<div class="row content2">
							<div class="col-sm-6 col-sm-offset-3  ">
								<button class="btn btn-danger btn-block"   ng-click="closeFn()">关闭</button>
							</div>
						</div>
					</div>
			</div>
		</div>
	</div>
</div>
