<div  class="keepershopadd" >
	<div class="container  contents bgw">

		<div class="col-sm-8 col-sm-offset-2 stepshow">
			<div class="step">
				<div class="stepover" style="width:75%"></div>
				<div class="stepson step1 active">
					<span>1</span>
					<h5>基本资料设置</h5>
				</div>
				<div class="stepson step52 active">
					<span>2</span>
					<h5>餐桌资料设置</h5>
				</div>
				<div class="stepson step2 active">
					<span>3</span>
					<h5>营业时间设置</h5>
				</div>
				<div class="stepson step54 active">
					<span>4</span>
					<h5>添加员工</h5>
				</div>
				<div class="stepson step3">
					<span>5</span>
					<h5>完成</h5>
				</div>
			</div>
		</div>
		<form class="row" ng-submit="postSend()" name="add_form">
			<div class="col-sm-8 col-sm-offset-2 mt20">
				<table class="table table-bordered">
					<tr class="title">
						<th class="col-sm-3">姓名</th>
						<th class="col-sm-4">账号</th>
						<th class="col-sm-4">密码</th>
						<th>
							<a class="btn btn-default btn-xs" ng-click="addStaffFn()"> <i class="glyphicon glyphicon-plus"></i>
							</a>
						</th>
					</tr>
					<tr ng-repeat="staffs in posts.staff" style="position:static">
						<td>
							<span ng-if"staffs.error" ng-bind="staffs.error"></span>
							<input class="form-control" dy-name="'nickname'+$index" type="text" ng-model="staffs.nickname" ng-pattern="config.textCheckJson.nickname" ng-blur="staffs.nicknamec.show=0" ng-focus="staffs.nicknamec.show=1"  required/>
							<span class=" TittleError2" ng-show="add_form.nickname{{$index}}.$error&&staffs.nicknamec.show"  ng-messages="add_form.nickname{{$index}}.$error" ng-maxlength="10">
								<div   ng-message="required" >
									<span >不能为空</span>
								</div>
								<div  ng-message="pattern">
									<span >长度为2-20位的字、汉字、数字</span>
								</div>
							</span>
						</td>
						<td>
							<input class="form-control" dy-name="'name'+$index" type="text" ng-model="staffs.name" ng-pattern="config.textCheckJson.name" ng-blur="staffs.namec.show=0" ng-focus="staffs.namec.show=1"  required/>
							<span class=" TittleError2" ng-show="add_form.name{{$index}}.$error&&staffs.namec.show"  ng-messages="add_form.name{{$index}}.$error" ng-maxlength="10">
								<div   ng-message="required" >
									<span >不能为空</span>
								</div>
								<div  ng-message="pattern">
									<span>6-16位，字母开头的字母数字组合</span>
								</div>
							</span>
						</td>
						<td>
							<input class="form-control" dy-name="'password'+$index" type="password" ng-model="staffs.password" ng-pattern="config.textCheckJson.password" ng-blur="staffs.passwordc.show=0" ng-focus="staffs.passwordc.show=1"  required/>
							<span class=" TittleError2" ng-show="add_form.password{{$index}}.$error&&staffs.passwordc.show"  ng-messages="add_form.password{{$index}}.$error" ng-maxlength="10">
								<div   ng-message="required" >
									<span >不能为空</span>
								</div>
								<div  ng-message="pattern">
									<span >8-16位，不能含有空格</span>
								</div>
							</span>
							<span  class=" TittleError2"  ng-show=""></span>
						</td>
						<td>
							<span class="sm-click" ng-hide="$last&&$first&&!posts.staff" ng-click="removeStaffFn($index)"> <i class="glyphicon glyphicon-remove"></i>
							</span>
						</td>
					</tr>
					<tr ng-repeat="staff2 in sendok" style="position:static">
						<td ng-bind="staff2.name"></td>
						<td ng-bind="staff2.nickname"></td>
						<td >************</td>
						<td>已添加</td>
					</tr>
				</table>

			</div>

			<div class="col-sm-6 col-sm-offset-3">
				<div class="row">
					<div class="col-sm-6">
						<a class="btn btn-default btn-block" back-button>返回</a>
					</div>
					<div class="col-sm-6 ">
						<button class="btn btn-danger btn-block" ng-disabled="!add_form.$valid" ng-click="sendposts()">下一步</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

<script>$('input').tooltip({container: 'body'});</script>
