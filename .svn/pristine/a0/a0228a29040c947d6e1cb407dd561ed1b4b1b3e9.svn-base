<div class="out ruleadd2">
  <div class="col-sm-3 text-right ">
    <span class="title">余额使用条件</span>
  </div>

  <div class="col-sm-9 content" style="margin-top: -5px;padding-left:20px;border-bottom: 1px solid #f0f0f0;">
    <div ng-repeat="(key,detail) in posts.CHARGECONSUME.CHARGECONSUME.detail">
      <div class="form-group" ng-repeat="details in detail" ng-init="details.id=key">
        <label class="radio-inline">
          <input type="radio" ng-model="details.value" ng-value="true">余额不足允许使用。</input>
        </label>
        <label class="radio-inline">
          <input type="radio" ng-model="details.value" ng-value="false">余额不足不允许使用。</input>
        </label>
      </div>
    </div>
  </div>
</div>

<div class="out ruleadd2">
  <div class="col-sm-3 text-right ">
    <span class="title">充值卡本金部分是否计入实收</span>
  </div>
  <div class="col-sm-9 content" style="margin-top: -5px;padding-left:20px;border-bottom: 1px solid #f0f0f0;">
    <div ng-repeat="(key,detail) in posts.CHARGECONSUME.CHARGECONSUME.detail">
      <div class="form-group" ng-repeat="details in detail" ng-init="details.id=key">
        <label class="radio-inline">
          <input type="checkbox" ng-model="posts.CHARGECONSUME.CHARGECONSUME.realIncome">计入实收</input>
          <p>(勾选表示计入实收，否则表示计入优惠)</p>
        </label>
      </div>
    </div>
  </div>
</div>
<div class="out ruleadd2">
  <div class="col-sm-3 text-right ">
    <span class="title">余额通用</span>
  </div>

  <div class="col-sm-9 content" style="margin-top: -5px;padding-left:20px;border-bottom: 1px solid #f0f0f0;">
    <div ng-repeat="(key,detail) in posts.CHARGECONSUME.CHARGECONSUME.detail">
      <div class="form-group" ng-repeat="details in detail" ng-init="details.id=key">
        <label class="radio-inline">
          <input type="checkbox" ng-model="posts.CHARGECONSUME.CHARGECONSUME.allpurpose">支持充值卡余额通用</input>
        </label>
      </div>
    </div>
  </div>
</div>

<div class="out ruleadd2" >
  <div class="col-sm-3 text-right ">
    <span class="title">充值当天使用条件</span>
  </div>
  <div class="col-sm-9 content mb0">
    <div ng-repeat="(key,detail) in posts.CHARGECONSUME.CHARGECONSUME.detail">
      <div class="form-group mb22" ng-repeat="details in detail" ng-init="details.id=key">
        <div class="" style="padding-left: 12px">
          <div class="form-control-static pull-left">充值当天，允许使用充值额</div>
          <div class="col-sm-2">
            <input ng-model="posts.CHARGECONSUME.CHARGECONSUME.celling" min="1" max="100" step="1" type="number"
                   class="form-control" placeholder="总金额"
                   required/>
          </div>
          <div class="form-control-static">%</div>
        </div>
        <div class="" style="clear: both" ng-if="posts.CHARGECONSUME.CHARGECONSUME.celling">
          <label class="radio-inline">
            <input type="checkbox" ng-model="posts.CHARGECONSUME.CHARGECONSUME.firstLimit">仅限首次充值</input>
          </label>
        </div>
        <select ng-model="details.id" class="sr-only form-control"
                ng-options="item.id as item.name for item in view.member" name="member"></select>
      </div>
    </div>
  </div>
</div>
