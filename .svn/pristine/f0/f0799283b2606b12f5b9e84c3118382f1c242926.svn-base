.datepicker {
top: 35px;
left: 0;
padding: 4px;
margin-top: 1px;
-webkit-border-radius: 4px;
-moz-border-radius: 4px;
border-radius: 4px;
/*.dow {
border-top: 1px solid #ddd !important;
}*/
position:absolute;
z-index: 999;
border: 1px solid #ccc;
background: #fff;
width: 220px;
}
.datepicker:before {
content: '';
display: inline-block;
border-left: 7px solid transparent;
border-right: 7px solid transparent;
border-bottom: 7px solid #ccc;
border-bottom-color: rgba(0, 0, 0, 0.2);
position: absolute;
top: -7px;
left: 6px;

}
.datepicker:after {
content: '';
display: inline-block;
border-left: 6px solid transparent;
border-right: 6px solid transparent;
border-bottom: 6px solid #ffffff;
position: absolute;
top: -6px;
left: 7px;
}
.datepicker .datepickermenu{padding:0 34px;position: relative;border-bottom: 1px solid #ccc;font-size: 14px}
.datepicker .datepickermenu-title{text-align: center;width:100%;}
.datepicker .datepickermenu a {position: absolute;}
.datepicker .datepickermenu .left{left:0;top:0;}
.datepicker .datepickermenu .right{right:0;top:0;}
.datepicker .weekhead{display:inline-block;width:30px;text-align: center;height:30px;line-height: 30px}
.datepicker .weekhead:first-child,.datepicker .weekhead:last-child{color:red;}