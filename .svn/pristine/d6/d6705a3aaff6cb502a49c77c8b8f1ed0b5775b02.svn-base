<div class="doc">
  <ul class="bg-muted">
    <li>合计</li>
    <li>充值：{{title.amount||0}}元 （{{title.count}}笔）</li>
    <li>使用：{{title.usedAmount||0}}元 （{{title.usedCount}}笔）</li>
  </ul>
  <ul id="myTab" class="nav nav-tabs" ng-init="post.type = '601'">
    <li ng-class="{'active':post.type=='601'}"><a ng-click="change('601')">充值</a></li>
    <li ng-class="{'active':post.type=='602'}"><a ng-click="change('602')">使用</a></li>
  </ul>
  <div ng-if="view.result.items">
    <table class="table" ng-if="post.type=='601'">
      <thead>
      <tr>
        <td>序号</td>
        <td>订单号</td>
        <td>上宾号</td>
        <td>
          <div>充值金额</div>
          <div>(元)</div>
        </td>
        <td>
          <div>赠送金额</div>
          <div>(元)</div>
        </td>
        <td>
          <div>充值方式</div>
        </td>
        <td>获得途径</td>
        <td>操作员</td>
        <td>时间</td>
      </tr>
      </thead>
      <tbody class="slide-down">
      <tr ng-repeat="row in view.result.items">
        <td ng-bind="((page-1)*count)+$index+1"></td>
        <td><a ng-click="goto('doc/detail/'+ row.orderNo)">{{row.orderNo}}</a></td>
        <td ng-bind="row.username"></td>
        <td ng-bind="row.amount||0"></td>
        <td ng-bind="row.benefit||0"></td>
        <td ng-bind="row.payMode"></td>
        <td class="center" ng-bind="row.reason"></td>
        <td class="left" ng-bind="row.staffName||(row.reason=='商户赠送'?'管理员':'自助')"></td>
        <td ng-bind="row.time"></td>
      </tr>
      </tbody>
    </table>
    <table class="table" ng-if="post.type=='602'">
      <thead>
      <tr>
        <td>序号</td>
        <td>订单号</td>
        <td>上宾号</td>
        <td>
          <div>使用</div>
          <div>(元)</div>
        </td>
        <td>使用途径
        </td>
        <td>操作员</td>
        <td>时间</td>
      </tr>
      </thead>
      <tbody class="slide-down">
      <tr ng-repeat="row in view.result.items">
        <td ng-bind="((page-1)*count)+$index+1"></td>
        <td><a ng-click="goto('doc/detail/'+ row.orderNo)">{{row.orderNo}}</a></td>
        <td><a ng-click="goto('customer/details/'+ row.userId)">{{row.username}}</a></td>
        <td ng-bind="'-' + row.amount|number"></td>
        <td ng-bind="row.reason">/</td>
        <td class="center" ng-bind="row.staffName||'自助'"></td>
        <td class="center" ng-bind="row.time"></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>


