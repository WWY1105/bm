<div class="v-shadow">
  <div ng-if="config.permission.includes('MALL')">
    <label class="left-tag" style="margin: 20px 0">商城管理</label>

    <div class="list-group click">
      <a class="list-group-item" ng-class="{'active':config.breadset[0].class=='buy'}"
         ng-click="goto('mall/buy')">购买</a>
      <!--<a class="list-group-item" ng-class="{'active':config.breadset[0].class=='point'}" ng-click="goto('point')">积分</a>-->
    </div>
  </div>
  <label class="left-tag" style="margin: 20px 0">菜品管理</label>

  <div class="list-group click">
    <a class="list-group-item" ng-class="{'active':config.breadset[0].class=='dish'}"
       ng-click="goto('mall/dish')">菜品</a>
    <a class="list-group-item" ng-class="{'active':config.breadset[0].class=='meal'}"
       ng-click="goto('mall/meal')">套餐</a>
    <a class="list-group-item" ng-class="{'active':config.breadset[0].class=='category'}"
       ng-click="goto('mall/category')">品类</a>
  </div>
</div>
