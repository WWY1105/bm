<div class="container contents bgw">
    <div class="col-sm-8 col-sm-offset-2">
        <div class="form-group" style="overflow:hidden">
            <div class="col-sm-3">
                <select class="form-control" ng-model="search.type" ng-options=" item.key as item.name  for item in dict.memberType"></select>
            </div>
            <div class="col-sm-5">
                <input ng-model="search.param" class="form-control" placeholder="请输入卡号或者电话号码">
            </div>
            <div class="col-sm-2">
                <button class="btn btn-primary btn-block" ng-click="postSend()">查询</button>
            </div>
            <div class="col-sm-2">
                <button class="btn btn-default  btn-block" ng-click="goto('customer/add')">添加会员</button>
            </div>
        </div>
    </div>
    <div class="col-sm-12 plan-title text-center">
        <div class="col-sm-1"></div>
        <div class="col-sm-2">昵称</div>
        <div class="col-sm-1">电话</div>
        <div class="col-sm-1">生日</div>
        <div class="col-sm-1">卡号</div>
        <div class="col-sm-1">级别</div>
        <!--    <div class="col-sm-1">来源</div> -->
        <div class="col-sm-1">加入时间</div>
        <div class="col-sm-1">最晚消费</div>
        <div class="col-sm-3">权益操作</div>
        <!--     <div class="col-sm-1">-->
    </div>

<div class="col-sm-12 plan-son text-center slide-down" ng-repeat="customers in view.customer.items">
    <div class="col-sm-1 avatar">
      <img ng-src="{{customers.avatarUrl||'public/img/avatar.png'}}"
           ng-mouseover="customers.show=1;interestGetFn(customers.id)" ng-mouseleave="customers.show=0">
      <div class="popover right slide-right" ng-hide="!customers.show" ng-mouseover="customers.show=1"
           ng-mouseleave="customers.show=0">
        <div class="arrow"></div>
        <h3 class="popover-title" ng-bind="customers.nickname"></h3>
        <div class="popover-content">
          <!--
              <p ng-bind="customers.memberGradeName||'顾客'"></p>
          -->
          <p ng-bind="'充值余额:'+view.interest[customers.id].charge"></p>
          <p ng-bind="'积分:'+view.interest[customers.id].point"></p>
          <p ng-bind="'优惠券:'+view.interest[customers.id].couponCount"></p>

        </div>
      </div>
    </div>
    <!--
        <div class="col-sm-2 text-left p20" ng-class="{'line26':customers.memberCardNo&&customers.phone}">
            <div ng-if="customers.memberCardNo"> <i class="glyphicon glyphicon-credit-card"></i> {{customers.memberCardNo}}
            </div>
            <div ng-if="customers.phone"> <i class="glyphicon glyphicon-earphone"></i> {{customers.phone}}
            </div>
        </div>
        -->
    <div class="col-sm-2" ng-bind="customers.nickname"></div>
    <div class="col-sm-1" ng-bind="customers.phone"></div>
    <div class="col-sm-1" ng-bind="customers.birthday|date:'MM-dd'"></div>
    <div class="col-sm-1" ng-bind="customers.memberCardNo||'无'"></div>
    <div class="col-sm-1" ng-bind="customers.memberGradeName||'顾客'"></div>
    <!-- <div class="col-sm-1" ng-bind="dict.source[customers.source]||'未知'"></div> -->
    <div class="col-sm-1" ng-bind="customers.firstJoinTime"></div>
    <div class="col-sm-1" ng-bind="customers.lastConsumeTime||'无消费'"></div>
    <div class="col-sm-3">
        <div class="row">
            <button class="btn btn-default " ng-click="goto('customer/charge/'+customers.id)">充值卡</button>
            <button class="btn btn-default " ng-click="goto('customer/point/'+customers.id)">积分</button>
            <button class="btn btn-default " ng-click="goto('customer/coupon/'+customers.id)">券</button>
        </div>
    </div>
    <!--
        <div class="col-sm-1">
            <button class="btn btn-default">发送验证码</button>
        </div>
        -->
</div>
<div class="col-sm-12 plan-son text-left" ng-if="!view.customer.items[0]">
    无查询结果
</div>
<div class="col-sm-12" ng-if="view.customer.total/view.customer.count>1">
    <pagination items-per-page="view.customer.count" boundary-links="true" total-items="view.customer.total" ng-model="view.customer.page" class="pagination-sm" previous-text="&lsaquo;" ng-change="pageChange()" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></pagination>
</div>
</div>
</div>
<script>
$(function() {
    $('.popover').each(function() {
        width = $(this).prev().outerWidth();
        height = $(this).prev().outerHeight();
        console.log($(this).parent().width());
        $(this).css({
            "left": ($(this).parent().outerWidth() - width) / 2 + width + 2,
            "top": -($(this).outerHeight() - height - 2) / 2
        })
    })

})
</script>
