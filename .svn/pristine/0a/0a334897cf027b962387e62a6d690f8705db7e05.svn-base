<div ng-controller="RulSpecialpriceCtr">
	<div class="out ruleadd2" >
		<div class="col-sm-2 text-right ">
			<span class="title">活动详情</span>
		</div>
		<div class="col-sm-10 content mb0">
			<div class="form-group mb22"  ng-repeat="SPECIAL_PRICEs in SPECIAL_PRICE.posts.detail">
				<div class="col-sm-3">
						<select  ng-model="SPECIAL_PRICEs.member"  class="form-control " ng-model="area.area1"
  									ng-options="item.id as item.name for item in view.member" name="area" required></select>
				</div>
				<div class=" form-control-static pull-left">享受以下菜品特价</div>
				<div class="col-sm-3 mt20">
					<input ng-model="SPECIAL_PRICEs.value" type="text" class="form-control"/>
				</div>
				<div class="col-sm-3 mt20">
					<label for="">原价</label>
					<input ng-model="SPECIAL_PRICEs.amount" type="number" class="form-control" min ="0"/>
				</div>
				<div class="col-sm-3 mt20">
					<input ng-model="SPECIAL_PRICEs.specialAmount" type="number" class="form-control" min ="0"/> 
				</div>
				<div class="col-sm-1 mt20"><a class="add click" ng-show="$first" ng-click="SPECIAL_PRICE.addFn()"> <i class="glyphicon glyphicon-plus"></i>
				</a>
				<a class="remove click" ng-show="!$first" ng-click="SPECIAL_PRICE.removeFn($index)"> <i class="glyphicon glyphicon-remove"></i>
				</a></div>

			</div>
		</div>
	</div>

	<div class="out ruleadd2">
		<div class="col-sm-2 text-right ">
			<span class="title">数量</span>
		</div>
		<div class="col-sm-10 content2 mb0">
			<div class="form-group mb22" >
				<div class=" form-control-static pull-left">前</div>
				<div class="col-sm-3 ">
					<input type="text" ng-model="SPECIAL_PRICE.posts.countLimit" class="form-control" />
				</div>
				<div class=" form-control-static pull-left">人有效<span style="color:#999;padding-left:20px">(0表示不限制)</span></div>

			</div>

		</div>
	</div>
</div>
