<div class="bgw">
  <div class="row">
    <div ng-include="'/keeper/mall/leftmenu.html'"></div>
    <div class="v-shadow-content">
      <div class="material">
        <ul class="col-sm-12 nav nav-pills" role="tablist" style="padding: 0 27px;    display: flex;
        justify-content: flex-start;
        flex-wrap: wrap">
          <li style="width: 5em;font-size: 14px;">分类</li>
          <li role="presentation" ng-click="groupList(-2)" ng-class="{'active':view.leftIndex==-2}">全部菜品</li>
          <li role="presentation" ng-click="groupList($index)" ng-class="{'active':view.leftIndex==$index}"
              ng-repeat="item in view.groups">{{item.name}}
          </li>
          <li class="pull-right">
            <button class="btn btn-primary pull-right" ng-click="goto('mall/dish/add')">添加菜品</button>
          </li>
        </ul>
      </div>
      <div class="col-md-12 shopshow" style="margin-top:10px;">

          <table class="table table-striped table-condensed table-bordered">
              <thead>
                <th>编码</th>
                <th>图片</th>
                <th>名称</th>
                <th>原价</th>
                <th>会员价</th>
                <th>操作</th>
              </thead>
              <tbody>
                <tr ng-repeat="dish in dishes.list.items" >
                  <td>{{dish.code}}</td>
                  <td><img ng-src="{{dish.picUrl}}" ng-if="dish.picUrl"  width="100px" height="50px">
                   </td>
                  <td>{{dish.name}}</td>
                  <td>￥{{dish.price}}</td>
                  <td ><p class="text-danger" ng-if="dish.memberPrice!=dish.price&&dish.memberPrice>0">￥{{dish.memberPrice}}</p></td>
                  <td>
                    <button class="btn btn-xs btn-primary" ng-click="goto('mall/dish/edit/'+dish.id)">编辑</button>
                    <button class="btn btn-xs btn-danger" ng-click="remove($index)">删除</button>
                  </td>
                </tr>
              </tbody>
          </table>
